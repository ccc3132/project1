import java.util.*;

class J13 {
        void input()
        {
               Scanner csg = new Scanner(System.in);

               System.out.print("파일용량을 기가바이트 단위로 입력 :");
               int gigabytes = csg.nextInt();
 
               


               int megabytes = gigabytes*1024;
               int kilobytes = megabytes*1024;
               long bytes = kilobytes*1024;
  
              System.out.println("입력한 파일용량은");
              System.out.println(megabytes+"메가바이트");
              System.out.println(kilobytes+"킬로바이트");
              System.out.println(bytes+"바이트");               
        }


   


        public static void main(String[] args)
        {
                new J13().input();
        }

}
